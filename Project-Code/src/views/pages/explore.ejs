<%- include ('../partials/header') %> <%- include ('../partials/menu') %>

<main>
  <div class="container">
    <h1>Explore</h1>
    <div id="search_bar">
        <form action="/explore" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title:</label>
              <input type="text" id="title" name="title" class="form-control" />
            </div>      
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
    </div>
    <div id="book_table">

      <%
                if(books)
                {
                    var rows = '';
                    books.forEach(function(item)
                            {
                                rows += "<tr><td>" + item.volumeInfo.title + "</td><td>" + item.volumeInfo.authors[0] + "</td><td>" + item.volumeInfo.industryIdentifiers[0].identifier + "</td><td>" + item.volumeInfo.publishedDate + "</td><td><img src=\"" + item.volumeInfo.imageLinks.smallThumbnail + "\"></td></tr>";
                            }
                    );
                }
            %>

        <table class="table table-striped">
          <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">ISBN</th>
                <th scope="col">Date Published</th>
                <th scope="col">Cover</th>
            </tr></thead>
            <hr>
          <tbody>
          <%- rows %>
          </tbody>  
                      
        </table>
    <!-- MODAL ACCESS: items[<index>].volumeInfo.description -->
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>